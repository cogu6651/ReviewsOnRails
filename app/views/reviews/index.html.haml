%h1 Listing reviews

%table
  %tr
    %th User
    %th Business
    %th Time
    %th Stars
    %th Price
    %th
    %th
    %th

  - @reviews.each do |review|
    %tr
      %td= review.user
      %td= review.business
      %td= review.time
      %td= review.stars
      %td= review.price
      %td= link_to 'Show', review
      %td= link_to 'Edit', edit_review_path(review)
      %td= link_to 'Destroy', review, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Review', new_review_path
